<!-- views/admin.ejs -->

<%- include('partials/header'); -%>

<main class="container mt-5">
    <h2>Welcome, Admin!</h2>
    <p>This is the admin dashboard. You have access to special administrative features.</p>
    <table class="table">
        <thead>
            <tr>
                <th>Picture</th>
                <th>Name (RU)</th>
                <th>Name (EN)</th>
                <th>Description (RU)</th>
                <th>Description (EN)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% items.forEach(item => { %>
                <tr>
                    <td><img src="<%= item.picture %>" alt="Picture"></td>
                    <td><%= item.nameRU %></td>
                    <td><%= item.nameEN %></td>
                    <td><%= item.descriptionRU %></td>
                    <td><%= item.descriptionEN %></td>
                    <td>
                        <a href="/admin/edit/<%= item._id %>" class="btn btn-primary">Edit</a>
                        <a href="/admin/delete/<%= item._id %>" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
    <a href="/admin/add" class="btn btn-success">Add New Item</a>
</main>

<%- include('partials/footer'); -%>
